<% content_for :mainclass do %>
    cover
<% end %>

<div class='cover-element'>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:'form-signin'}) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.email_field :email, autofocus: true, placeholder:'Email address', class:"form-control solo"%></div>

  <div><%= f.submit "Reset Password", class:"btn btn-lg btn-block custbtn"%></div>
<% end %>

<%= render "devise/shared/links" %>

</div>